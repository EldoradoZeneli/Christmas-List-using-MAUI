<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChristmasListUI_MAUI.MainPage"
             Title="Christmas list"
             WidthRequest="500" HeightRequest="700">

    <Border
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Border.Shadow>
            <Shadow Brush="Black"
            Opacity="0.4"
            Radius="12" />
        </Border.Shadow>
        
        <HorizontalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            
            Padding="30"
            Spacing="30">
            
            <Button x:Name="btnWishlist" Text="Wishlist" Command="{Binding WishlistCommand}"/>
            <Button x:Name="btnChristmasList" Text="Gift list" Command="{Binding GiftListCommand}"/>
        </HorizontalStackLayout>
    </Border>

</ContentPage>
