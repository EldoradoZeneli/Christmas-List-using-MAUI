<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChristmasListUI_MAUI.WishlistPage"
             Title="Wishlist"
             WidthRequest="500" HeightRequest="700">
    
    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="16">

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding WishlistItems}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedWishItem}"
                        VerticalScrollBarVisibility="Never">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12"
                            Margin="0,0,0,12"
                            BackgroundColor="White">

                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Opacity="0.4"
                                    Radius="12"/>
                        </Border.Shadow>

                        <Grid ColumnDefinitions="80,*"
                              ColumnSpacing="12">

                            <Image Source="{Binding ImageUrl}"
                                   HeightRequest="60"
                                   WidthRequest="60"
                                   Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="4">

                                <Label Text="{Binding Title}"
                                       FontSize="20"
                                       TextColor="Black"
                                       FontAttributes="Bold"/>

                                <Label Text="{Binding Description}"
                                       FontSize="12"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       TextColor="Black"/>

                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="New"
                Grid.Row="2"           
                HeightRequest="60"
                CornerRadius="15"
                BackgroundColor="Green"
                TextColor="White"
                VerticalOptions="End"
                Margin="10"
                Command="{Binding NewItemCommand}"/>

    </Grid>
</ContentPage>